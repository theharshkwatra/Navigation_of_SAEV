<?xml version="1.0"?>
<launch>

    <arg name="camera_enable" default="true"/>
    <arg name="lidar_enable" default="true"/>
    <arg name="wall_enable" default="true"/>


    <include file="$(find my_robot)/launch/gazebo.launch">   </include>

    <group if="$(arg camera_enable)">
        <node name="camera_sensor" pkg="my_robot" type="camera_sensor.py" output="screen"/>    
    </group>

    <group if="$(arg lidar_enable)">
        <node name="lidar_sensor" pkg="my_robot" type="lidar_sensor.py" output="screen"/>
    </group>

    <group if="$(arg wall_enable)">
        <node name="wall_follower" pkg="my_robot" type="wall_follower.py" output="screen"/>
    </group>

</launch>
